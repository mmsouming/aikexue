<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_bg_common_blue_grey"
    android:gravity="center">

    <TextView
        android:id="@+id/tvErrorStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgNotData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:text="@string/sso_DidNotFindTheRelevantData"
        android:textColor="@color/color_font_black_grey"
        android:textSize="@dimen/textSize_level4_16" />

    <ImageView
        android:id="@+id/imgNotData"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/not_data" />
</RelativeLayout>