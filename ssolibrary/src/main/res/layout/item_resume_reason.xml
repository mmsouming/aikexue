<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginRight="@dimen/margin_20"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@drawable/shape_rct_topleft_toright"
        android:gravity="center"
        android:text="拒绝理由"
        android:textColor="@color/color_font_black"
        android:textSize="@dimen/textSize_level4_16" />

    <EditText
        android:id="@+id/edContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_80"
        android:background="@color/color_bg_common_blue_grey"
        android:gravity="left"
        android:hint="填写你拒绝的理由吧"
        android:maxLength="50"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_5"
        android:textColor="@color/color_font_black_grey"
        android:textSize="@dimen/textSize_level5_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btNot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="暂时不填写"
            android:textColor="@color/color_blue_topBar"
            android:textSize="@dimen/textSize_level4_16" />

        <Button
            android:id="@+id/btCommit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="提交"
            android:textColor="@color/color_blue_topBar"
            android:textSize="@dimen/textSize_level4_16" />

    </LinearLayout>

</LinearLayout>