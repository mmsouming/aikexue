<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_common_blue_grey"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_no_job_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_bg_common_blue_grey"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="—— 更多“"
            android:textSize="@dimen/textSize_level5_14" />

        <TextView
            android:id="@+id/tv_find_company_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="亚马逊"
            android:textColor="@color/color_green_topBar"
            android:textSize="@dimen/textSize_level5_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="”相关职位 ——"
            android:textSize="@dimen/textSize_level5_14" />

    </LinearLayout>


    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5"
        android:background="@color/color_bg_common_blue_grey"

        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15">

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="@dimen/width_60"
                    android:layout_height="@dimen/height_60"
                    android:background="@drawable/shape_resume_rect_gray">

                    <org.cny.awf.view.ImageView
                        android:id="@+id/imgPhoto"
                        android:layout_width="@dimen/width_50"
                        android:layout_height="@dimen/height_50"
                        android:layout_gravity="center"
                        android:src="@drawable/company" />
                </FrameLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp">

                    <LinearLayout
                        android:id="@+id/layout_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvJobName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxEms="7"
                            android:singleLine="true"
                            android:text="国际销售客服"
                            android:textColor="@color/sso_resume_black_one"
                            android:textSize="@dimen/textSize_level4_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxEms="7"
                            android:singleLine="true"
                            android:text="齐齐哈尔滨 | "
                            android:textColor="@color/sso_resume_gray_two"
                            android:textSize="@dimen/textSize_level5_14" />

                        <TextView
                            android:id="@+id/tvCompanyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:maxWidth="130dp"
                            android:singleLine="true"
                            android:text="苹果公司苹果公司aaaa"
                            android:textColor="@color/sso_resume_gray_two"
                            android:textSize="@dimen/textSize_level5_14" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:singleLine="true"
                        android:text="经验1-3年/大专/专职"
                        android:textColor="@color/sso_resume_gray_one"
                        android:textSize="@dimen/textSize_level5_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp">

                    <TextView
                        android:id="@+id/tvWage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:text="3-5K"
                        android:textColor="@color/sso_resume_orange"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTimeOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:text="01-22"
                        android:textColor="@color/sso_resume_gray_one" />

                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout

                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45">

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tvTimeTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="2016-12-8"
                    android:textColor="@color/sso_resume_gray_one"
                    android:textSize="@dimen/textSize_level5_14" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="邀请中"
                    android:textColor="@color/color_green_topBar"
                    android:textSize="@dimen/textSize_level5_14" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_Reason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvStatus"
                android:layout_marginBottom="@dimen/margin_15"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="理由:很遗憾告诉你，我们拒绝了你是因为你长的太帅帅帅帅帅"
                android:textColor="@color/sso_resume_gray_one"
                android:textSize="@dimen/textSize_level5_14"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <include
        android:id="@+id/layoutError"
        layout="@layout/item_status_error"
        android:visibility="gone" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5"
        android:background="@color/color_bg_common_blue_grey"

        />

</LinearLayout>